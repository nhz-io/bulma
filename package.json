{
  "name": "bulma",
  "version": "0.0.12",
  "homepage": "http://bulma.io",
  "author": "jgthms <bbxdesign@gmail.com>",
  "description": "Modern CSS framework based on Flexbox",
  "main": "bulma.styl",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nhz-io/bulma.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "styl",
    "stylus",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/nhz-io/bulma/issues"
  },
  "devDependencies": {
    "captain-git-hook": "~1.0.5",
    "find-project-root": "^1.1.1",
    "glob": "^7.0.0",
    "sass2stylus": "^1.0.0",
    "stylus": "^0.53.0"
  },
  "scripts": {
    "start": "npm run build",
    "build": "git checkout stylus-utils && git pull -f origin stylus-utils && npm install && npm run clean && node utils/mkstylus && build-stylus && buld-stylus-min",
    "build-stylus": "./node_modules/stylus/bin/stylus -m  < bulma.styl > css/bulma.css",
    "build-stylus-min": "./node_modules/stylus/bin/stylus -m -c  < bulma.styl > css/bulma.min.css",
    "clean": "rm -rf css && mkdir css"
  }
}
